<%= content_for :projects_class, "active" %>

<%= content_for :taction do %>
  <%= link_to '+ New Project', new_project_path, class: "btn btn-info btn-fill btn-wd pull-right" if can? :create, Project %>
<% end %>

<%= content_for :tcontent do %>
  <% if @projects.present? %>
    <thead>
      <tr>
        <th>Project Id</th>
        <th>Name</th>
        <th>Created At</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.project_id %></td>
          <td><%= project.name %></td>
          <td><%= project.created_at.to_s(:default) %></td>
          <td><%= project.status.capitalize %></td>
          <td>
            <%= link_to 'Edit', edit_project_path(project), class: "btn bg-olive" %>
            <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <div class="row">
      <p>No projects are assigned to you currently</p>
    </div>
  <% end %>
<% end %>

<%= content_for :theader, "All Projects" %>

<%= render '/shared/table' %>
