<!DOCTYPE html>
<html>
<head>
  <title>ProjectCollab</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="wrapper">
    <div class="sidebar" data-background-color="black" data-active-color="danger">

      <div class="sidebar-wrapper">
        <div class="logo">
          <a href="http://www.creative-tim.com" class="simple-text">
            Project Collab
          </a>
        </div>

        <ul class="nav">
          <li class="<%= yield :dashboard_class %>">
            <%= link_to dashboard_path do %>
            <%= fa_icon "dashboard" %>
            <p>Dashboard</p>
            <% end %>
          </li>
          <li class="<%= yield :projects_class %>">
            <%= link_to projects_path do %>
              <%= fa_icon "user" %>
              <p>Projects</p>
            <% end %>
          </li>
          <% if can? :all_tasks, Task %>
            <li class="<%= yield :tasks_class %>">
              <%= link_to all_tasks_path do %>
                <%= fa_icon "tasks" %>
                <p>Tasks</p>
              <% end %>
            </li>
          <% end %>
          <% if can? :all_tasks, Task %>
            <li class="<%= yield :users_class %>">
              <%= link_to users_path do %>
                <%= fa_icon "users" %>
                <p>Developers</p>
              <% end %>
            </li>
          <% end %>
          <li class="<%= yield :settings_class %>">
            <%= link_to edit_user_registration_path do %>
              <%= fa_icon "gear" %>
              <p>Settings</p>
            <% end %>
          </li>
          <li class="">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <%= fa_icon "power-off" %>
              <p>Logout</p>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <div class="main-panel">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar bar1"></span>
              <span class="icon-bar bar2"></span>
              <span class="icon-bar bar3"></span>
            </button>
            <a class="navbar-brand" href="#">Dashboard (<%= current_user.email %>)</a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <!-- <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= fa_icon "bell" %>
                  <p class="notification">5</p>
                  <p>Notifications</p>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><a href="#">Notification 1</a></li>
                  <li><a href="#">Notification 2</a></li>
                  <li><a href="#">Notification 3</a></li>
                  <li><a href="#">Notification 4</a></li>
                  <li><a href="#">Another notification</a></li>
                </ul>
              </li>
              <li> -->
                <!-- <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= fa_icon "power-off" %>
                  <p>Logout</p>
                <% end %> -->
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <%= custom_bootstrap_flash %>
            <% if content_for?(:errors) %>
              <%= alert_box(content_for(:errors), 'alert-danger', false) %>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>

      <footer class="footer">
        <div class="container-fluid">
          <nav class="pull-left">
            <ul>

              <li>
                <a href="http://www.creative-tim.com">
                  Creative Tim
                </a>
              </li>
              <li>
                <a href="http://blog.creative-tim.com">
                  Blog
                </a>
              </li>
              <li>
                <a href="http://www.creative-tim.com/license">
                  Licenses
                </a>
              </li>
            </ul>
          </nav>
          <div class="copyright pull-right">
            &copy; <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com">Creative Tim</a>
          </div>
        </div>
      </footer>

    </div>
  </div>

  <div class="modal" id="modalPopUp">
    <div class="modal-dialog">
      <div class="modal-content">

      </div>
    </div>
  </div>

</body>
</html>
