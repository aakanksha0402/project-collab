<%= content_for :settings_class, "active" %>

<div class="col-lg-8 col-md-7">
    <div class="card">
        <div class="header">
            <h4 class="title"><h2>Edit <%= resource_name.to_s.humanize %></h2></h4>
        </div>
        <div class="content">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |form| %>
            <%= devise_error_messages! %>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= form.label :email %>
                            <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-input" %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                          <%= form.label :current_password %>
                          <%= form.text_field :current_password, class: "form-control border-input" %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                          <%= form.label :password %>
                          <%= form.text_field :password, class: "form-control border-input" %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                          <%= form.label :password_confirmation %>
                          <%= form.text_field :password_confirmation, class: "form-control border-input" %>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <%= form.submit "Save", class: "btn btn-info btn-fill btn-wd" %>
                </div>
                <div class="clearfix"></div>
            <% end %>
        </div>
    </div>
</div>

<div class="col-lg-4 col-md-5">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-fill btn-block" %>
</div>
